{
    "hosting": {
        "public": "frontend/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/ping",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/testdb",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/query",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/queryweaver/**",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/graph/**",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/admin/**",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ]
}